<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="/plugins/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="/css/all.min.css" rel="stylesheet">
    <script src="/plugins/jquery/dist/jquery.min.js"></script>
    <script src="/plugins/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/plugins/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/plugins/bootbox.js/bootbox.js"></script>
    <script src="/js/script.min.js"></script>
    <script>
      $(function(){
        $('#list-item').slimScroll({
            height: '336px'
        });
        var list_item = $('#list-item');
        var text = $('#text');

        $('#btn').click(function(){
          var txt = text.val();
          if(txt==''){
            Alert('Must input data','Error',function(){
              text.focus();
            });
          }
          else{
            $.ajax({
              url: '/',
              type: 'POST',
              dataType: 'json',
              data:{txt: txt},
              success:function(data){
                if(data.error==0){
                  var html = '';
                  if(data.list && data.list.length>0){
                    for(var i=0, item; item=data.list[i];i++){
                      html+='<li class="list-group-item">'+ item.comment +'</li>';
                    }
                  }
                  list_item.html(html);
                  text.val('').focus();
                }
                else{
                  Alert(data.message);
                }
              }
            });
          }
        });
      });
    </script>
  </head>
  <body>
    <div class="container">
      <div class="page-header">
        <h1>Data Check</h1>
      </div>
      <form class="form-horizontal" onsubmit="return false">
        <div class="form-group">
          <label for="text" class="control-label col-sm-2">Text:</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" id="text" placeholder="Input text">
          </div>
          <div class="col-sm-2">
            <button type="button" id="btn" class="btn btn-default">Submit</button>
          </div>
        </div>
        <div class="form-group">
          <ul class="list-group" id="list-item">
            <% list.forEach(function(item) { %>
              <li class="list-group-item"><%- item.comment %></li>
            <% }); %>
          </ul>
        </div>
      </form>
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">&nbsp;</p>
      </div>
    </footer>
    <% include includes/loading %>
  </body>
</html>